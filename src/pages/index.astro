---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/ui/navbar/Navbar.astro';
import Hero from '../components/Hero/Hero.astro';
import Tech from '../components/Technology/Tech.astro';
import Vision from '../components/Vision/Vision.astro';
import Work from '../components/Work/Work.astro';
import Design from '@/components/Design/Design.astro';
import Footer from "../components/ui/footer/Footer.astro";
---

<Layout>
	<Navbar slot="navbar" />
	<Hero />
	<Tech />
	<Vision/>
	<Work/>
	<Design/>
	<Footer slot="footer" />
</Layout>

<script>
  import { scrollToId } from "@/lib/scroll-handler";

  const urlParams = new URLSearchParams(window.location.search);
  const scrollTarget = urlParams.get('scrollTo');

  if (scrollTarget) {
    setTimeout(() => {
      scrollToId(scrollTarget, { behavior: 'smooth' }, 80);
      
      const newUrl = window.location.pathname;
      window.history.replaceState({}, '', newUrl);
    }, 100);
  }
</script>