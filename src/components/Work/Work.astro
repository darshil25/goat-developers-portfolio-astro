---
import { cn } from "@/lib/utils";
import CaseStudyCard from '@/design/_sections/CaseStudyCard.astro'; 
import BrandLogo from '@/components/BrandLogo.astro'; 

const projects = [
  {
    status: 'under-development',
    link: '/case-study/vanquish-solutions',
    // We use a custom flag or just logic in the template to handle the "logoNode" equivalent
    brand: 'vanquish', 
    logoSize: { width: 56, height: 56 },
    title: 'Unlock Your Trading Potential',
    tags: ['AI', 'UX Design', 'Full Stack', 'E-learning', 'Fintech Platform'],
    description: 'Vanquish is a cutting-edge copytrading platform for mobile and web, allowing retail investors to easily replicate top trader strategies. With user-friendly onboarding and AI-driven analytics, we aim to simplify trading workflows into engaging experiences.',
    thumbnail: 'https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/vanquish-solutions/vanquish-mockup-8.png',
  },
  {
    status: 'live',
    link: '/case-study/analytical-investments',
    logo: 'https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/analytical-investments/analytical-investment-logo.png',
    logoSize: { width: 56, height: 56 },
    title: 'Creating a premium AI-driven investing platform tailored for users.',
    tags: ['AI', 'UX Design', 'Full Stack', 'E-learning', 'Fintech Platform'],
    description: 'Investors, whether beginners or intermediates, often struggle with overwhelming financial tools that lack clarity. The client sought a platform to transform raw data into actionable insights, educate users based on their goals, and provide real-time AI market support.',
    thumbnail: 'https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/analytical-investments/main-card-thumbnail.png',
    imageTags: ['AI-Chat', 'Real Time Dashboard', 'E-Learning'],
  },
  {
    status: 'live',
    link: '/case-study/anant-radio',
    logo: 'https://anantradio.blr1.cdn.digitaloceanspaces.com/front-end-static/anant-radio-logo.svg',
    logoSize: { width: 118, height: 20 },
    title: 'Radiologist Clinic Management Software',
    tags: ['UX Design', 'Full Stack', 'SAAS', 'In-House'],
    description: "Anant Radio was built from the ground up with a focus on innovation. We've integrated AI and cutting-edge technology to create a modern, user-friendly platform that optimizes radiologist workflows and improves patient care.",
    thumbnail: 'https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/aradio-thumbnail.png',
    imageTags: ['ERP', 'CRM'],
  },
];
---

<section 
  id="work" 
  class={cn(
    "flex flex-col items-center w-full",
    "mt-[140px] min-[700px]:mt-[60px] min-[1024px]:mt-[120px]",
    "gap-[32px] min-[700px]:gap-[40px] min-[1024px]:gap-[80px]"
  )}
>
  
  {/* --- Header Section --- */}
  <div class="flex flex-col items-center text-center gap-2">
    <h2 class={cn(
      "font-semibold leading-[1.2]",
      // Font Sizes
      "text-[20px] min-[700px]:text-[36px] min-[1024px]:text-[44px]"
    )}>
      Real Work. Real Results.
    </h2>
    
    <p class={cn(
      "text-center text-[#fbfbfb]/80", // Assuming a slight opacity or color for body text
      // Font Size
      "text-[14px]",
      // Width constraints
      "w-[85%] min-[700px]:w-[70%]"
    )}>
      We don't just talk product â€” we ship it. Here's a look at
      how we've helped businesses launch smarter, faster, and better.
    </p>
  </div>

  {/* --- Cards Wrapper --- */}
  <div class={cn(
    "flex flex-col w-full items-center",
    // Wrapper Width & Gap
    "w-[90%] gap-[32px]", // Mobile
    "min-[700px]:w-auto min-[700px]:gap-[64px]", // Tablet
    "min-[1260px]:w-[1080px]" // Desktop limit
  )}>
    {projects.map((project) => (
      <CaseStudyCard 
        {...project} 
        isVanquish={project.brand === 'vanquish'}
      />
    ))}
  </div>

</section>