---
import Icon from "../../svg/Icon.astro"
import GetInTouch from "../../Form/GetInTouch.astro";
import SectionSwitch from "../reusable/section-switcher/section-switch.astro";
---

<div class="fixed top-[2%] sm:top-3 left-1/2 transform -translate-x-1/2 flex justify-between z-100 px-3 sm:px-4 ">
  <div class="flex items-center gap-2 sm:gap-3">
    
    <nav class="flex items-center gap-8 sm:gap-20 backdrop-blur-[24px] border-none rounded-lg px-2 sm:px-5 py-3 shadow-2xl " style="background: rgba(255, 255, 255, 0.08);">
      
      <a href="/" class="flex items-center no-underline hover:opacity-80 transition-opacity shrink-0">
        <Icon variant="desktop" className="sm:h-[28px] h-5" />
      </a>
      
      <div class="flex items-center gap-3 sm:gap-6">
        <a href="/contact" class="hidden sm:block text-sm font-medium text-gray-300 hover:text-white transition-colors whitespace-nowrap">
          Contact
        </a>
        <GetInTouch forHeader={true} />
      </div>
      
    </nav>
  </div>
      <SectionSwitch className="ml-3 sm:ml-6" />
</div>

