---
// components/Details.astro
---

<div class="details-wrapper text-[#fbfbfb] relative">
  
  <div class="mobile-grid">
    <div class="card">
      <p class="label">Industry</p>
      <p class="value">AI & Creative Tools</p>
    </div>

    <div class="card">
      <p class="label">Project Type:</p>
      <p class="value">Internal Tool â€“ B2B SaaS (B2C In future)</p>
    </div>

    <div class="grid grid-cols-5 gap-3 col-span-2">
      
      <div class="flex flex-col gap-3 col-span-3">
        <div class="card">
          <p class="label">Scope:</p>
          <p class="value">UX Design + Frontend Development (Module only)</p>
        </div>
        <div class="card">
          <p class="label">Platform Type</p>
          <p class="value">Web Application (React + Notion-like editor)</p>
        </div>
      </div>

      <div class="card col-span-2" style="height: 100%;">
        <p class="label">Duration</p>
        <p class="value">6 Week</p>
      </div>

    </div>

    <div class="card col-span-2">
      <p class="label">Status:</p>
      <p class="value">
        Design & Frontend Complete (Under active development by client team)
      </p>
    </div>
  </div>

  <div class="bg-gradient absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2">
    {Array.from({ length: 5 }).map(() => (
      <span />
    ))}
  </div>
</div>

<style>
  .details-wrapper {
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
  }

  .mobile-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; 
    gap: 12px;
  }

  .card {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 8px;
    padding: 12px;
    background-color: rgba(255, 255, 255, 0.03);
    border-radius: 8px;
    backdrop-filter: blur(12px);
    border: none;
    height: auto; 
  }

  .col-span-2 {
    grid-column: span 2;
  }

  .col-span-3 {
    grid-column: span 3;
  }

  .label {
    font-size: 12px;
    line-height: 1.2;
    opacity: 0.5;
    margin: 0;
  }

  .value {
    font-size: 14px;
    line-height: 1.4;
    margin: 0;
    font-weight: 400;
  }

  .bg-gradient {
    display: flex;
    opacity: 0.2;
    filter: blur(60px);
    z-index: -1; 
    pointer-events: none;
  }

  .bg-gradient span {
    border-radius: 100%;
    display: flex;
    width: 150px;
    height: 150px;
    background: white;
  }

  .bg-gradient span:not(:first-child) {
    margin-left: -100px;
  }
</style>