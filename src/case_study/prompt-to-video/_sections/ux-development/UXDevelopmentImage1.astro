---
// components/UXDevelopmentImage1.astro
import { Image } from 'astro:assets';
import Img from '../../../../assets/rawfiles/prompt-to-video/mockup-3-1.png';

---

<div class="image1 relative flex-shrink-0 flex flex-row items-center justify-center order-1 lg:order-2">
  <Image
    src={Img}
    alt="UX Development Mockup"
    width={480}
    height={549}
    class="object-cover relative z-1"
    draggable="false"
  />
  
  <div class="bg-gradient absolute -top-1/3 left-1/2 -translate-x-1/2 flex items-center">
    {Array.from({ length: 5 }).map(() => (
      <span class="bg-white rounded-[50%]" />
    ))}
  </div>
</div>

<style>
  .image1 {
    width: 480px;
    margin: 0 auto;
  }

  .image1 img {
    width: 100%;
    height: auto;
  }

  .bg-gradient {
    display: none; /* Hidden by default */
    opacity: 0.2;
    filter: blur(58.89637756347656px);
  }

  .bg-gradient span {
    display: flex;
    width: 176px;
    height: 165px;
  }

  .bg-gradient span:not(:first-child) {
    margin-left: -117px;
  }

  /* Responsive Widths */
  @media (min-width: 700px) and (max-width: 1023px) {
    .image1 {
      width: 60%;
    }
  }

  @media (max-width: 700px) {
    .image1 {
      width: 90%;
    }
    /* Show gradient only on mobile */
    .bg-gradient {
      display: flex;
    }
  }
</style>