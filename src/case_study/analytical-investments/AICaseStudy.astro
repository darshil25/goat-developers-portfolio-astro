---
import Intro from './_sections/intro.astro';
import DiscoveryStrategy from './_sections/discovery-strategy.astro';
import DesignStack from './_sections/design-stack.astro';
import FeatureTestingDeploy from './_sections/feature-testing-deploy.astro';
import GallerySnapshot from './_sections/gallery-snapshot.astro';
---

<main class="main relative flex flex-col overflow-hidden mb-40 w-full">
  <Intro />
  <DiscoveryStrategy />
  <DesignStack />
  <FeatureTestingDeploy />
  <GallerySnapshot /> 
</main>

<style>
  
  /* Default (Desktop 1261px+) */
  .main {
    gap: 180px;
    /* padding-top: 396px; // Commented out in original */
  }

  /* Laptop (1023px - 1260px) */
  @media (min-width: 1023px) and (max-width: 1260px) {
    .main {
      gap: 160px;
    }
  }

  /* Tablet (700px - 1023px) */
  @media (min-width: 700px) and (max-width: 1023px) {
    .main {
      gap: 140px;
    }
  }

  /* Mobile (< 700px) */
  @media (max-width: 700px) {
    .main {
      gap: 120px;
    }
  }
</style>