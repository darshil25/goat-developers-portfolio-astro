---
// Intro.astro
import { Image } from 'astro:assets';

// --- PLACEHOLDER COMPONENTS (Replace with actual imports) ---
import AiSparkle from '@/components/svg/ai-sparkle.astro';
import LiveLinkDiv from '@/components/ui/reusable/LiveLinkDiv.astro';
---

<div class="intro_wrapper relative w-full overflow-hidden text-[#fbfbfb]">
  
  <div class="intro flex flex-col items-center w-full relative z-10">
    
    {/* --- 1. First Section (Header) --- */}
    <div class="first flex flex-col items-center relative z-10 px-4">
      <p class="text-base opacity-50 leading-[1.2]">Case Study</p>
      
      <Image
        src="https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/analytical-investments/analytical-investment-logo.png"
        alt="logo"
        width={112}
        height={112}
        class="logo object-contain my-4"
        priority
      />
      
      <p class="intro_text text-center font-normal">
        Omega Suite - Reinventing Financial Intelligence for Everyone
      </p>

      <div class="flex items-center gap-2 mt-4">
         <a href="https://www.analyticalinvestments.ai/" class="text-[#a8a8a8] hover:text-white transition-colors text-sm flex items-center gap-1" target="_blank">
            Portfolio <span class="text-[10px] opacity-70">↗</span>
         </a>
      </div>

      <div class="tags flex items-center flex-wrap justify-center gap-3 mt-4">
        <span class="flex items-center gap-1">
          <AiSparkle class="size-4" />
          <p>AI</p>
        </span>
        <p>Fin-Tech</p>
        <p>Ed-tech</p>
        <p>News</p>
      </div>
    </div>

    {/* --- 2. Image 1 --- */}
    <div class="image1 relative flex items-center justify-center w-full mt-4">
      <Image
        src="https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/analytical-investments/mockup-1.png"
        alt="image1"
        width={1080}
        height={810}
        class="object-cover"
        draggable="false"
        priority
      />
    </div>

    {/* --- 3. Details Section (Refactored) --- */}
    <div class="details relative w-full">
      
      {/* Column 1: Industry & Duration */}
      <div class="details_1">
        <div class="glass-box">
          <p class="label">Industry</p>
          <p class="value whitespace-nowrap">FinTech / EdTech</p>
        </div>
        <div class="glass-box">
          <p class="label">Duration</p>
          <p class="value">5W + (Ongoing)</p>
        </div>
      </div>

      {/* Column 2: Type & Status */}
      <div class="details_2">
        <div class="glass-box">
          <p class="label">Project Type:</p>
          <p class="value">AI-Powered Financial Platform</p>
        </div>
        <div class="glass-box">
          <p class="label">Status:</p>
          <p class="value">Ongoing Enhancements in Progress</p>
        </div>
      </div>

      {/* Column 3: Scope */}
      <div class="details_3">
        <div class="glass-box">
          <p class="label">Scope:</p>
          <ul class="scope-list">
            <li>Strategy</li>
            <li>UI/UX Design</li>
            <li>Development</li>
            <li>QA</li>
            <li>Deployment</li>
          </ul>
        </div>
      </div>

      {/* Details Gradient */}
      <div class="bg_gradient absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex pointer-events-none -z-10">
        {Array.from({ length: 5 }).map((_) => (
          <span></span>
        ))}
      </div>
    </div>

    {/* --- 4. Image Text Layout --- */}
    <div class="image_text_layout flex flex-col md:flex-row items-center justify-center w-full max-w-[1080px]">
      <div class="image2 flex-shrink-0 relative flex items-center justify-center">
        <Image
          src="https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/analytical-investments/mockup-2.png"
          alt="image2"
          width={305}
          height={252}
          class="object-cover relative z-10"
          draggable="false"
        />
        <div class="bg_gradient_small absolute top-0 left-1/2 -translate-x-1/2 flex items-center pointer-events-none">
          <span class="rounded-full bg-[#DD8CA2]"></span>
          <span class="rounded-full bg-[#DCB477]"></span>
          <span class="rounded-full bg-white"></span>
          <span class="rounded-full bg-[#8A7FE0]"></span>
          <span class="rounded-full bg-[#E7B5BB]"></span>
        </div>
      </div>

      <div class="challange text-[#fbfbfb] flex flex-col gap-6 max-w-md px-4 md:px-0">
        <h2 class="font-semibold text-xl">The Challenge</h2>
        <p>
          Investors — from beginners to intermediate traders — face the same
          struggle: too much noise, too little clarity. Financial tools are often
          overwhelming, non-personalized, and either oversimplified or painfully
          complex. The client wanted a platform that could turn raw data into
          actionable insights, educate users based on their goals, and offer
          real-time market support via AI.
        </p>
      </div>
    </div>

  </div>

  {/* Background Pattern */}
  <Image
    src="https://anantradio.blr1.cdn.digitaloceanspaces.com/goatdevelopers/analytical-investments/ai-page-bg-2.svg"
    alt="Background Pattern"
    width={860}
    height={1232}
    class="bg-pattern absolute top-0 left-1/2 -translate-x-1/2 pointer-events-none -z-0"
  />

</div>

<style>
  /* --------------------------------------------------------- */
  /* BASE STYLES (Mobile First)                               */
  /* --------------------------------------------------------- */
  .intro_wrapper {
    position: relative;
    padding-top: 25%;
  }
  .intro_wrapper .bg-pattern {
    width: auto;
    height: 720px;
  }
  .intro {
    gap: 40px;
  }

  /* --- First Section --- */
  .first { gap: 12px; }
  .first .logo { width: 112px; aspect-ratio: 1; }
  .first .intro_text {
    font-size: 14px;
    line-height: 1.4;
    text-align: center;
    width: 65%;
    max-width: 280px;
  }
  .tags > *:not(span), .tags span {
    padding: 4px;
    border-radius: 4px;
    background: rgba(16, 15, 19, 0.25);
    color: #e8e8e8;
    font-size: 12px;
    line-height: 1.25;
  }

  /* --- DETAILS SECTION --- */
  .details {
    display: flex;
    flex-direction: column; /* Stack columns on mobile */
    gap: 12px;
    margin: 0 auto;
    max-width: 80%;
  }

  /* Mobile: .details_1 and .details_2 are containers for 2 items each.
     They must stack vertically on mobile.
  */
  .details_1 {
    display: flex;
    flex-direction: row;
    gap: 10px;
    width: 100%;
  }
  .details_2 {
    display: flex;
    flex-direction: column;
    gap: 12px;
    width: 100%;
  }
  
  .details_3 {
    width: 100%;
  }

  /* Shared Glass Box Style */
  .glass-box {
    display: flex;
    flex-direction: column;
    padding: 10px 14px;
    background-color: rgba(255, 255, 255, 0.01);
    border-radius: 8px;
    backdrop-filter: blur(12px);
    width: 100%;
  }

  .glass-box .label {
    font-size: 11px;
    opacity: 0.5;
    line-height: 1.2;
    font-weight: 400;
    margin-bottom: 4px;
  }

  .glass-box .value {
    font-size: 13px;
    line-height: 1.25;
    font-weight: 600;
  }

  /* Scope List */
  .scope-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 4px;
  }
  .scope-list li {
    list-style: disc;
    margin-left: 16px;
    font-size: 12px;
    font-weight: 400;
  }

  /* Gradient */
  .bg_gradient {
    display: flex;
    opacity: 0.2;
    filter: blur(59px);
  }
  .bg_gradient span {
    border-radius: 100%;
    display: flex;
    width: 176px;
    height: 165px;
    background: white;
  }
  .bg_gradient span:not(:first-child) {
    margin-left: -47px;
  }

  /* --- Image 1 --- */
  .image1 img { width: 100%; max-width: 1080px; }

  /* --- Image 2 & Challenge --- */
  .image2 { padding-top: 60px; }
  .image2 img { width: 90%; }
  
  .bg_gradient_small {
    padding: 16px 12px;
    opacity: 0.8;
    filter: blur(80px);
  }
  .bg_gradient_small span { width: 134px; height: 126px; }
  .bg_gradient_small span:not(:first-child) { margin-left: -90px; }

  .challange {
    width: 90%;
    margin: 0 auto;
    align-items: center;
    gap: 24px;
  }
  .challange h2 { font-size: 20px; font-weight: 100; text-align: center; }
  .challange p { font-size: 12px; font-weight: 200; text-align: center; opacity: 0.8; }
  
  .image_text_layout { gap: 0px; }


  /* --------------------------------------------------------- */
  /* TABLET (700px - 1023px)                                  */
  /* --------------------------------------------------------- */
  @media (min-width: 700px) {
    .intro_wrapper { padding-top: 8%; }
    .intro_wrapper .bg-pattern { width: 70%; height: auto; }
    .intro { gap: 140px; max-width: 90%; margin: 0 auto; }

    .first .logo { width: 120px; }
    .first .intro_text { font-size: 16px; width: 65%; }

    /* --- DETAILS TABLET/DESKTOP LAYOUT --- */
    .details {
      flex-direction: row; /* Main Row */
      justify-content: space-between;
      max-width: 100%;
      gap: 24px;
    }

    /* .details_1 & .details_2 remain flex-col, but we increase the gap
       to separate Industry/Duration and Type/Status visually */
       .details_1{
        flex-direction: column;
       }
    .details_1, .details_2 {
      width: auto;
      gap: 40px; 
    }
    
    .details_3 {
      width: auto;
    }

    .bg_gradient span { width: 226px; height: 215px; }

    /* Rest of the layout */
    .image2 img { width: 537px; }
    .bg_gradient_small { padding: 28px 22px; filter: blur(141px); }
    .bg_gradient_small span { width: 190px; height: 175px; }
    .bg_gradient_small span:not(:first-child) { margin-left: -120px; }

    .challange { align-items: flex-start; margin: 0; width: auto; }
    .challange h2, .challange p { text-align: left; }
    .challange p { font-size: 16px; }

    .image_text_layout { flex-direction: row; gap: 40px; }
  }


  /* --------------------------------------------------------- */
  /* LAPTOP (1023px - 1260px)                                 */
  /* --------------------------------------------------------- */
  @media (min-width: 1023px) {
    .intro_wrapper { padding-top: 20%; }
    .intro { gap: 160px; max-width: 80%; }
    .details { max-width: 90%; margin: 0 auto; }
    .details_1{flex-direction: column;}
  }


  /* --------------------------------------------------------- */
  /* DESKTOP (1260px +)                                       */
  /* --------------------------------------------------------- */
  @media (min-width: 1260px) {
    .intro { max-width: 1080px; margin: 0 auto; }
  }


  /* --------------------------------------------------------- */
  /* LARGE SCREEN (1920px +)                                  */
  /* --------------------------------------------------------- */
  @media (min-width: 1920px) {
    .intro_wrapper { padding-top: 6%; }
    .intro { gap: 30px; }
  }
</style>