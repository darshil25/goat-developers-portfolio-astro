---
import Card1 from "./card1.astro"
import DesignHighlight from "./DesignHighlight.astro"
import StackInfo from "./StackInfo.astro"
import QADeployment from "./QADeployment.astro"
import Numbers from "./Numbers.astro"
import End from "./End.astro"
---

<div class="cards-wrapper flex flex-col">
  <Card1 />
  <DesignHighlight />
  <StackInfo />
  <QADeployment />
  <Numbers />
  <End />
</div>

<style>
  /* * This wrapper mimics the spacing behavior if these components 
   * were grouped together in the original layout.
   * Adjust the gap as needed to match your layout's flow.
   */
  .cards-wrapper {
    gap: 180px;
    width: 100%;
  }

  /* Responsive Gap Adjustments matching the global breakpoints */
  @media (min-width: 1023px) and (max-width: 1260px) {
    .cards-wrapper {
      gap: 160px;
    }
  }

  @media (min-width: 700px) and (max-width: 1023px) {
    .cards-wrapper {
      gap: 140px;
    }
  }

  @media (max-width: 700px) {
    .cards-wrapper {
      gap: 120px;
    }
  }
</style>