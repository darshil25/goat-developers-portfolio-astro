---
// components/ALCaseStudyImage1.astro
import { Image } from 'astro:assets';
import Img from '../../../../assets/rawfiles/alpha-ledger/al-mock-up-1.png';



interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<div class:list={["image1 relative flex items-center justify-center", className]}>
  <Image
    src={Img}
    alt="Alpha Ledger Case Study Image 1"
    width={880}
    height={670}
    draggable="false"
    priority
    class="object-cover"
  />
</div>

<style>
  .image1 img {
    width: 100%;
    max-width: 1080px;
    object-fit: cover;
    height: auto;
  }

  @media (min-width: 700px) and (max-width: 1023px) {
    .image1 img {
      max-width: 720px;
    }
  }

  @media (max-width: 700px) {
    .image1 img {
      max-width: 90%;
    }
  }
</style>