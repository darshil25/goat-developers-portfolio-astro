---
// src/components/ProjectSpecs.astro

export interface InfoItem {
  label: string;
  value?: string;
  valueHtml?: string; // Allows for complex styling like "16W + Ongoing"
}

export interface ScopeItem {
  label: string;
  items: string[]; // Changed to array for easier list rendering
}

interface Props {
  block1: {
    items: InfoItem[];
  };
  block2: {
    items: InfoItem[];
    scope: ScopeItem;
  };
  class?: string;
}

const { block1, block2, class: className } = Astro.props;
---

<div class:list={["specs-grid", className]}>
  
  <div id="first" class="col-stack">
    {block1.items.map((item) => (
      <div class="spec-card">
        <span class="label">{item.label}</span>
        {item.valueHtml ? (
          <div class="value" set:html={item.valueHtml} />
        ) : (
          <div class="value">{item.value}</div>
        )}
      </div>
    ))}
  </div>

  <div class="col-stack">
    {block2.items.map((item) => (
      <div class="spec-card ">
        <span class="label">{item.label}</span>
        {item.valueHtml ? (
          <div class="value" set:html={item.valueHtml} />
        ) : (
          <div class="value">{item.value}</div>
        )}
      </div>
    ))}
  </div>

  <div class="spec-card scope-card">
    <span class="label">{block2.scope.label}:</span>
    <ul class="scope-list">
      {block2.scope.items.map((scopeItem) => (
        <li>{scopeItem}</li>
      ))}
    </ul>
  </div>

</div>

<style>
  /* --- GRID LAYOUT --- */
  .specs-grid {
    display: flex;
    gap: 1.5rem; /* Gap between columns */
    font-family: sans-serif; /* Replace with your site font */
  }

  .col-stack {
    display: flex;
    flex-direction: column;
    gap: 1.5rem; 
    min-width: 160px;
  }

  .spec-card {
    background-color: rgba(255, 255, 255, 0.03);   
    border-radius: 8px;
    padding: 8px 16px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 80px; 
    backdrop-filter: blur(10px);
  }

  /* --- TYPOGRAPHY --- */
  .label {
    color:white
    font-size: 14px;
    margin-bottom: 0.25rem;
    font-weight: 400;
    opacity: 50%;
  }

  .value {
    color: white; 
    font-weight: 400;
    font-size: 16px;
    line-height: 125%
  }

  #first{
    flex-direction: column;
  }

  /* --- SCOPE SPECIFIC --- */
  .scope-card {
    min-width: 180px;
    justify-content: flex-start; /* Align list to top */
  }

  .scope-list {
    list-style: none;
    padding: 0;
    margin: 0.5rem 0 0 0;
    color: #e5e7eb;
    font-size: 0.95rem;
    line-height: 1.5;
  }
  
  .scope-list li::before {
    content: "â€¢";
    color: #9ca3af;
    margin-right: 0.5rem;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 700px) {
    .specs-grid {
      flex-direction: column;
      width: 100%;
    }
    #first{
      flex-direction: row;
    }
    
    .col-stack {
      width: 100%;
    }

    .spec-card {
      width: 100%;
    }
  }
