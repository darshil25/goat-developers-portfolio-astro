---
import { Image } from 'astro:assets';

interface ImageProp {
  src: any;
  alt: string;
}

interface Props {
  image1: ImageProp;
  image2: ImageProp;
  image3: ImageProp;
  image4: ImageProp;
  image5: ImageProp;
  class?: string;
}

const { image1, image2, image3, image4, image5, class: className = '' } = Astro.props;
---

<div class:list={['image-grid-1', className]}>
  <div class="grid-item item-1">
    <Image src={image1.src} alt={image1.alt} width={687} height={515} />
  </div>
  
  <div class="grid-item item-2">
    <Image src={image2.src} alt={image2.alt} width={687} height={515} />
  </div>

  <div class="grid-item item-3">
    <Image src={image3.src} alt={image3.alt} width={400} height={300} />
  </div>

  <div class="grid-item item-4">
    <Image src={image4.src} alt={image4.alt} width={400} height={300} />
  </div>

  <div class="grid-item item-5">
    <Image src={image5.src} alt={image5.alt} width={800} height={600} />
  </div>
</div>

<style>
  .image-grid-1 {
    display: grid;
    gap: 1rem;
    width: 100%;
    max-width: 1041px;
    margin: 0 auto;
    padding: 8px 16px;
  }

  .grid-item {
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
    background-color: #1a1a1a;
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  @media (min-width: 769px) {
    .image-grid-1 {
      grid-template-columns: repeat(6, 1fr);
    }
    
    .item-1 { grid-column: span 3; }
    .item-2 { grid-column: span 3; }
    .item-3 { grid-column: span 2; }
    .item-4 { grid-column: span 2; }
    .item-5 { grid-column: span 2; }
  }
  @media (max-width: 768px) {
    .image-grid-1 {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem; 
    }

    .item-1 {
      grid-column: span 2;
      aspect-ratio: 16 / 10;
    }

    .item-2 {
      grid-column: span 2;
      aspect-ratio: 16 / 10;
    }

    .item-3 {
      grid-column: span 1;
      aspect-ratio: 1 / 1; 
    }
    .item-4 {
      grid-column: span 1;
      aspect-ratio: 1 / 1;
    }

    .item-5 {
      grid-column: span 2;
      aspect-ratio: 16 / 12;
    }
  }
</style>