---
interface DetailItem {
  label: string;
  value: string;
  largeValue?: boolean;
  secondary?: string;
}

interface Props {
  title?: string;
  description: string;
  details: DetailItem[];
}

const { 
  title = 'The Project', 
  description, 
  details 
} = Astro.props;

const firstRowItems = details.slice(0, 2);
const remainingItems = details.slice(2);
---

<div class="details relative  flex flex-col gap-6 text-[#fbfbfb]">
  <h3 class="text-xl title">{title}</h3>
  
  <div class="flex flex-col  md:flex-row gap-6 md:gap-25">
    <div class="min-w-3/10 flex flex-col gap-6">
      {firstRowItems.length > 0 && (
        <div class="grid grid-cols-2 gap-3">
          {firstRowItems.map((item) => (
            <div class="flex flex-col bg-white/5 rounded-[7px] gap-3 px-4 py-2">
              <p class="opacity-50 leading-[1.2] text-xs md:text-sm">{item.label}</p>
              <p class="leading-tight text-sm md:text-base">{item.value}</p>
            </div>
          ))}
        </div>
      )}
      
      {remainingItems.map((item) => (
        <div class="flex flex-col whitespace-nowrap bg-white/5 rounded-[7px] gap-3 px-4 py-2 md:w-3/5">
          <p class="opacity-50 leading-[1.2] text-xs md:text-sm">{item.label}</p>
          {item.largeValue ? (
            <p class="leading-tight text-sm md:text-base flex items-center gap-1">
              <span class="text-[24px] md:text-[40px]">{item.value}</span>
              {item.secondary && <span class="secondary text-[16px] opacity-75">{item.secondary}</span>}
            </p>
          ) : (
            <p class="leading-tight text-sm md:text-base">{item.value}</p>
          )}
        </div>
      ))}
    </div>

    <p class="text-xs md:text-base opacity-80">
      {description}
    </p>
  </div>

  <div class="bg_gradient absolute top-2/3 md:top-1/5 left-1/2 -translate-x-1/2">
    {Array.from({ length: 5 }).map(() => (
      <span />
    ))}
  </div>
</div>

<style>
  .bg_gradient {
    display: flex;
    opacity: 0.15;
    filter: blur(100px);
    z-index: -1;
    pointer-events: none;
  }
  .title{
    font-weight: 20;
    opacity: 60%;
  }
  .secondary{
    line-height: 120%;
    letter-spacing: -2%;

  }
  .details{
    max-width: 1080px;
  }

  .bg_gradient span {
    border-radius: 100%;
    display: flex;
    width: 380px;
    height: 355px;
    background: #ffffff80;
  }

  .bg_gradient span:not(:first-child) {
    margin-left: -253px;
  }

  @media (max-width: 700px) {
    .bg_gradient {
      filter: blur(50px);
    }
    .bg_gradient span {
      width: 176px;
      height: 165px;
    }
    .bg_gradient span:not(:first-child) {
      margin-left: -117px;
    }
  }
</style>